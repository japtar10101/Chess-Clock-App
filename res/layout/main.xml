<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:keepScreenOn="true"
android:layout_width="fill_parent" android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:myapp="http://schemas.android.com/apk/res/com.japtar.ChessClockApp">

	<!-- Displaying Game Buttons -->
	<LinearLayout 
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
	
		<Button android:id="@+id/buttonLeftTime"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:text="@string/playerButtonText" android:layout_weight="1"
		android:typeface="monospace" android:textStyle="bold"
		android:shadowColor="#ffffffff" android:shadowRadius="10"
		android:textSize="80px" />
		
		<Button android:id="@+id/buttonRightTime"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:text="@string/playerButtonText" android:layout_weight="1"
		android:typeface="monospace" android:textStyle="bold"
		android:shadowColor="#ffffffff" android:shadowRadius="10"
		android:textSize="80px" />
	
	</LinearLayout>
	
	<!-- Displaying Delay Label -->
	<TextView android:id="@+id/labelDelay"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:padding="5px"
	android:text="@string/delayLabelText" android:background="#b0000000"
	android:layout_above="@+id/layoutOverlap" android:layout_centerHorizontal="true"
	android:typeface="monospace" android:textStyle="bold" android:textSize="60px"
	android:visibility="visible" />
	
	<!-- Displaying Pause Button -->
    <Button android:id="@+id/buttonPause" android:text="@string/pauseButtonText"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:typeface="monospace" android:textSize="40px" android:textStyle="normal"
    android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" />
    
    <!-- Declare an external layout -->
	<RelativeLayout android:id="@+id/layoutOverlap"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:visibility="invisible" android:background="#b0000000"
    android:layout_alignParentTop="true" android:layout_alignParentLeft="true" />
	
</RelativeLayout>
