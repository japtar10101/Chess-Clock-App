<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget42"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<Button
android:id="@+id/buttonStartGame"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="4px"
android:layout_marginLeft="4px"
android:layout_marginRight="4px"
android:text="Start Game"
android:layout_alignParentBottom="true"
android:layout_toLeftOf="@+id/buttonCancel"
>
</Button>
<Button
android:id="@+id/buttonCancel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Cancel"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
>
</Button>
<TimePicker
android:id="@+id/timeDelayTime"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/labelDelayTime"
android:layout_alignParentLeft="true"
>
</TimePicker>
<TextView
android:id="@+id/labelDelayTime"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="4px"
android:text="Delay Time"
android:layout_below="@+id/selectDelayMode"
android:layout_alignParentLeft="true"
>
</TextView>
<Spinner
android:id="@+id/selectDelayMode"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/labelDelayMode"
android:layout_alignParentLeft="true"
>
</Spinner>
<TextView
android:id="@+id/labelDelayMode"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="4px"
android:text="Delay Mode"
android:layout_below="@+id/timeLimit"
android:layout_alignParentLeft="true"
>
</TextView>
<TimePicker
android:id="@+id/timeLimit"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/labelTimeLimit"
android:layout_alignParentLeft="true"
>
</TimePicker>
<TextView
android:id="@+id/labelTimeLimit"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="4px"
android:text="Time Limit"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
>
</TextView>
</RelativeLayout>
