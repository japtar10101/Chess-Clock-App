<?xml version="1.0" encoding="utf-8"?>

<!-- Remember to update the versions frequently! -->
<!-- Version format: release.feature.bug-fix -->
<!-- For "features," even numbers are stable, odds are unstable -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.japtar.chessclock"
android:versionName="0.9.2"
android:versionCode="3">
    <uses-sdk android:minSdkVersion="8" />

    <!--  Application's activities -->    
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        
        <!-- Main Activity -->
        <activity android:name=".MainActivity"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Preference Activity -->
        <activity android:name=".menus.OptionsMenu"
        android:label="@string/settingsMenuLabel">
        </activity>
        
        <!-- The application's publisher ID assigned by AdMob -->
		<meta-data android:value="a14ce87763b2b94"
		android:name="ADMOB_PUBLISHER_ID" />
		
		<!-- AdMobActivity definition -->
		<activity android:name="com.admob.android.ads.AdMobActivity"
		android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
		android:configChanges="orientation|keyboard|keyboardHidden" />
		
		<!-- Track Market installs -->
		<receiver android:exported="true"
		android:name="com.admob.android.ads.analytics.InstallReceiver">
			<intent-filter>
				<action android:name="com.android.vending.INSTALL_REFERRER" />
			</intent-filter>
		</receiver>
		
		<!-- Don't allow location tracking -->
        <meta-data android:value="false"
        android:name="ADMOB_ALLOW_LOCATION_FOR_ADS" />
    </application>
    
    <!-- List of permissions -->
    <!-- One for Vibrator -->
    <permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	
	<!-- One for keeping the screen on -->
	<permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	
	<!-- One for accessing the internet (ads) -->
	<permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.INTERNET" />
	
</manifest>
